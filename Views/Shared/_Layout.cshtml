<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="description" content="Intercom.fm">
	<meta name="author" content="Floodlight Software">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<meta name="google-site-verification" content="8GHppzvs0KnBf6qT3hFRqXeEDDl_TS4Ic0Um2jrJ30E" />

	@if (@ViewBag.Title == "")
	{
		<title>Intercom.fm</title>
	}
	else
	{
		<title>@ViewBag.Title - Intercom.fm</title>
	}

	<link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favicon.png")" />
	<link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favicon.png")" />
	<link rel="apple-touch-icon-precomposed" type="image/x-icon" href="@Url.Content("~/Content/Images/apple-touch-icon.png")" />
	<link rel="apple-touch-icon" type="image/x-icon" href="@Url.Content("~/Content/Images/apple-touch-icon.png")" />

	<link rel="stylesheet" href="/Styles/theme.scss" />
	@RenderSection("Styles", false)

    <script src="@Url.Content("~/Content/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/Scripts/xdr.js")" type="text/javascript"></script>
	@RenderSection("Scripts", false)

